<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aslapov.android.study.pallada.kisuknd.raids">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera" android:required="false"/>

    <application
        android:name=".RaidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/applicationLabel"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".ui.auth.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.RaidListActivity" />

        <activity
            android:name=".ui.ShowRaidActivity"
            android:label="@string/raid_information"
            android:parentActivityName=".ui.RaidListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.RaidListActivity" />
        </activity>

        <activity
            android:name=".ui.CreateRaidActivity"
            android:label="@string/new_raid_bar"
            android:parentActivityName=".ui.RaidListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.RaidListActivity" />
        </activity>

        <activity
            android:name=".ui.EditRaidActivity"
            android:label="@string/edit_raid_bar"
            android:parentActivityName=".ui.RaidListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.RaidListActivity" />
        </activity>
    </application>

</manifest>